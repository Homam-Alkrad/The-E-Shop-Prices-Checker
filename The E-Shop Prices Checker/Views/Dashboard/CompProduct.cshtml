            color: #0090e7;
            text-shadow: 1px 1px 2px #000000;
        }
    </style>

</head>
<body>
    <div class="container-scroller">
		<nav class="sidebar sidebar-offcanvas" id="sidebar">
        <div class="sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top">
            <div class="sidebar-logo">
                <span class="logo-text">The E-Shop Prices</span>
            </div>
        </div>
            <ul class="nav">
                <li class="nav-item profile">
                    <div class="profile-desc">
                        <div class="profile-pic">
                            <div class="count-indicator">
                                <img class="img-xs rounded-circle " src="~/user_profile.jpg" alt="">
                                <span class="count bg-success"></span>
                            </div>
                            <div class="profile-name">
                                <h5 class="mb-0 font-weight-normal">@user.FullName</h5>
                                <span>Gold Member</span>
                            </div>
                        </div>
                        <a href="#" id="profile-dropdown" data-bs-toggle="dropdown"><i class="mdi mdi-dots-vertical"></i></a>
                        <div class="dropdown-menu dropdown-menu-right sidebar-dropdown preview-list" aria-labelledby="profile-dropdown">
                            <a href="#" class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-dark rounded-circle">
                                        <i class="mdi mdi-cog text-primary"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content">
                                    <p class="preview-subject ellipsis mb-1 text-small">Account settings</p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-dark rounded-circle">
                                        <i class="mdi mdi-onepassword  text-info"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content">
                                    <p class="preview-subject ellipsis mb-1 text-small">Change Password</p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="#" class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-dark rounded-circle">
                                        <i class="mdi mdi-calendar-today text-success"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content">
                                    <p class="preview-subject ellipsis mb-1 text-small">To-do list</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </li>
                <li class="nav-item nav-category">
                    <span class="nav-link">Navigation</span>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Dashboard/Index">
                        <i class="fas fa-tachometer-alt" style="color: #0090e7; margin-right: 8px;"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Dashboard/CompProduct">
                        <i class="fas fa-box" style="color: #fc424a; margin-right: 8px;"></i> Products
                    </a>
                </li>

                <!-- Home Links -->
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Index">
                        <i class="fas fa-home" style="color: #0090e7; margin-right: 8px;"></i> Home
                    </a>
                </li>

                <!-- Account Links -->
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Logout">
                        <i class="fas fa-sign-out-alt" style="color: #fc424a; margin-right: 8px;"></i> Logout
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/About">
                        <i class="fas fa-info-circle" style="color: #0090e7; margin-right: 8px;"></i> About
                    </a>
                </li>
            </ul>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_navbar.html -->
            <nav class="navbar p-0 fixed-top d-flex flex-row">
                <div class="navbar-brand-wrapper d-flex d-lg-none align-items-center justify-content-center">
                    <a class="navbar-brand brand-logo-mini" href="index.html"><img src="~/user_profile.jpg" alt="logo" /></a>
                </div>
                <div class="navbar-menu-wrapper flex-grow d-flex align-items-stretch">
                    <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                        <span class="mdi mdi-menu"></span>
                    </button>
                    <ul class="navbar-nav w-100">
                        <li class="nav-item w-100">
                            <form class="nav-link mt-2 mt-md-0 d-none d-lg-flex search">
                                <input type="text" class="form-control" placeholder="Search products">
                            </form>
                        </li>
                    </ul>
                    <ul class="navbar-nav navbar-nav-right">
                        <li class="nav-item d-none d-lg-block">
                            <a class="nav-link btn btn-success create-new-button" id="createNewProductButton" href="#" style="background-color: #0090e7; border: none;">+ Create New Product</a>
                        </li>
                        <li class="nav-item nav-settings d-none d-lg-block">
                            <a class="nav-link" href="#">
                                <i class="mdi mdi-view-grid"></i>
                            </a>
                        </li>
                        <li class="nav-item dropdown border-left">
                            <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="mdi mdi-email"></i>
                                <span class="count bg-success"></span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end navbar-dropdown preview-list" aria-labelledby="messageDropdown">
                                <h6 class="p-3 mb-0">Messages</h6>
                            </div>
                        </li>
                        <li class="nav-item dropdown border-left">
                            <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-bs-toggle="dropdown">
                                <i class="mdi mdi-bell"></i>
                                <span class="count bg-danger"></span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
                                <h6 class="p-3 mb-0">Notifications</h6>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" id="profileDropdown" href="#" data-bs-toggle="dropdown">
                                <div class="navbar-profile">
                                    <img class="img-xs rounded-circle" src="~/user_profile.jpg" alt="">
                                    <p class="mb-0 d-none d-sm-block navbar-profile-name">@user.FullName</p>
                                    <i class="mdi mdi-menu-down d-none d-sm-block"></i>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end navbar-dropdown preview-list" aria-labelledby="profileDropdown">
                                <h6 class="p-3 mb-0">Profile</h6>
                            </div>
                        </li>
                    </ul>
                    <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                        <span class="mdi mdi-format-line-spacing"></span>
                    </button>
                </div>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <!-- Total Products Card -->
                        <div class="col-sm-4 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h5>Total Products</h5>
                                    <div class="row">
                                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                                            <h2 class="mb-0">@Model.TotalProducts</h2>
                                            <h6 class="text-muted font-weight-normal">Number of products owned</h6>
                                        </div>
                                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                                            <i class="icon-lg mdi mdi-package-variant text-primary ml-auto"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Max Price Product Card -->
                        <div class="col-sm-4 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h5>Most Expensive Product</h5>
                                    <div class="row">
                                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                                            <h2 class="mb-0">@Model.MaxPriceProduct?.Name</h2>
                                            <h6 class="text-muted font-weight-normal">Category: @Model.MaxPriceProduct?.Category?.Name</h6>
                                        </div>
                                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                                            <i class="icon-lg mdi mdi-cash text-success ml-auto"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Min Price Product Card -->
                        <div class="col-sm-4 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h5>Cheapest Product</h5>
                                    <div class="row">
                                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                                            <h2 class="mb-0">@Model.MinPriceProduct?.Name</h2>
                                            <h6 class="text-muted font-weight-normal">Category: @Model.MinPriceProduct?.Category?.Name</h6>
                                        </div>
                                        <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                                            <i class="icon-lg mdi mdi-tag text-danger ml-auto"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 grid-margin">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Product Data</h4>
                                    <div class="table-responsive">
                                        <table class="table" id="productTable">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Product Name</th>
                                                    <th>Description</th>
                                                    <th>Category</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.Products.Any())
                                                {
                                                    int index = 1;
                                                    foreach (var product in Model.Products)
                                                    {
                                                        <tr>
                                                            <td>@index</td>
                                                            <td>@product.Name</td>
                                                            <td>@product.Description</td>
                                                            <td>@product.Category?.Name</td>
                                                            <td>
                                                                <a href="/Products/Edit/@product.Id" class="btn btn-sm btn-primary" title="Edit">
                                                                    <i class="fas fa-edit"></i>
                                                                </a>
                                                                <a href="/Products/Delete/@product.Id" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this product?');">
                                                                    <i class="fas fa-trash"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                        index++;
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td colspan="6" class="text-center">No products found.</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © 2024 <a href="https://www.bootstrapdash.com/" target="_blank">BootstrapDash</a>. All rights reserved.</span>
                        <span class="text-muted float-none float-sm-end d-block mt-1 mt-sm-0 text-center"> <span class="text-muted float-none float-sm-end d-block mt-1 mt-sm-0 text-center">Hand-crafted & made with <i class="mdi mdi-heart text-danger"></i></span> <i class="mdi mdi-heart text-danger"></i></span>
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <div id="createProductModal" style="display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background-color: #191c24; color: white; border-radius: 8px; padding: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); width: 600px;">
        <div class="modal-content" style="background-color: #191c24;">
            <h3 style="text-align: center; color: #white;">Create New Product</h3>
            <form id="createProductForm" onsubmit="event.preventDefault(); submitCreateProductForm();">
                <div class="form-group">
                    <label for="productName" style="color: white;">Product Name</label>
                    <input type="text" id="productName" class="form-control" required style="background-color: #191c24; color: white; border: 1px solid #white; padding: 10px; border-radius: 4px;" />
                </div>
                <div class="form-group">
                    <label for="productPrice" style="color: white;">Product Price</label>
                    <input type="text" id="productPrice" class="form-control" required style="background-color: #191c24; color: white; border: 1px solid #white; padding: 10px; border-radius: 4px;" />
                </div>
                <div class="form-group">
                    <label for="productDescription" style="color: white;">Description</label>
                    <textarea id="productDescription" class="form-control" required style="background-color: #191c24; color: white; border: 1px solid #white; padding: 10px; border-radius: 4px;"></textarea>
                </div>
                <div class="form-group">
                    <label for="productCategory" style="color: white;">Category</label>
                    <select id="productCategory" class="form-control" required style="background-color: #191c24; color: white; border: 1px solid #white; padding: 10px; border-radius: 4px;">
                        <!-- Populate categories dynamically -->
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id" style="background-color: #191c24; color: white;">@category.Name</option>
                        }
                    </select>
                </div>
                <div style="display: flex; justify-content: space-between; margin-top: 20px;">
                    <button type="submit" class="btn" style="background-color: #0090e7; color: white; border: none; padding: 10px 20px; border-radius: 4px;">Submit</button>
                    <button type="button" class="btn" style="background-color: #fc424a; color: white; border: none; padding: 10px 20px; border-radius: 4px;" onclick="document.getElementById('createProductModal').style.display='none';">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        // JavaScript Code
        // Show modal on clicking "Create New Product"
        document.getElementById('createNewProductButton').addEventListener('click', function () {
            document.getElementById('createProductModal').style.display = 'block';
        });

        // Submit form data via AJAX
        function submitCreateProductForm() {
            const formData = {
                name: document.getElementById('productName').value,
                description: document.getElementById('productDescription').value,
                categoryId: document.getElementById('productCategory').value,
                Price:document.getElementById('productPrice').value
            };
            console.log(formData.name)
            console.log(formData.description)
            console.log(formData.categoryId)
            fetch('/Product/CreateProduct', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert(data.message);
                        location.reload();
                    } else {
                        alert(data.message);
                    }
                })
                .catch(error => console.error('Error:', error));
        }
    </script>

    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>

</body>
</html>